generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  age       Int?
  location  String?
  auraPoints Int     @default(0)
  habits    Habit[]
  createdAt DateTime @default(now())
}

model Habit {
  id        String   @id @default(uuid())
  title     String
  frequency String
  category  String   @default("General")
  goal      Int?     // Target completion rate (e.g., 80 for 80%)
  goalPeriod String  @default("Weekly") // Daily, Weekly, Monthly
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  checkins  Checkin[]
  createdAt DateTime @default(now())
}

model Checkin {
  id        String   @id @default(uuid())
  date      DateTime
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
}
